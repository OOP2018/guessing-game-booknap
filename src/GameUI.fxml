<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="265.0" prefWidth="428.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameController">
   <children>
      <FlowPane prefHeight="265.0" prefWidth="428.0">
         <children>
            <Label prefHeight="78.0" prefWidth="428.0" text="  Guessing game" textAlignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
               </padding>
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
            <Label fx:id="label" prefHeight="42.0" prefWidth="300.0" textAlignment="CENTER">
               <FlowPane.margin>
                  <Insets left="70.0" />
               </FlowPane.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label prefHeight="35.0" prefWidth="123.0" text="Your guess">
               <font>
                  <Font size="24.0" />
               </font>
               <FlowPane.margin>
                  <Insets left="50.0" top="20.0" />
               </FlowPane.margin>
            </Label>
            <TextField fx:id="field" onAction="#handleGuess">
               <FlowPane.margin>
                  <Insets left="15.0" top="20.0" />
               </FlowPane.margin></TextField>
            <Button mnemonicParsing="false" prefHeight="35.0" prefWidth="90.0" text="Guess">
               <FlowPane.margin>
                  <Insets left="90.0" top="22.0" />
               </FlowPane.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleClear" prefHeight="35.0" prefWidth="90.0" text="Clear">
               <FlowPane.margin>
                  <Insets left="60.0" top="22.0" />
               </FlowPane.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </FlowPane>
   </children>
</AnchorPane>
